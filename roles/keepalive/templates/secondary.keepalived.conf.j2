global_defs {
  router_id DOCKER_INGRESS
}

vrrp_instance VI_1 {
  state BACKUP
  interface {{ docker_gluster_interface}}
  virtual_router_id 51
  priority 90
  advert_int 1
  authentication {
    auth_type PASS
    auth_pass mypassword
  }

  virtual_ipaddress {
    {% for ip in keepapive_vip %}
    {{ ip }}
    {% endfor %}
  }
}